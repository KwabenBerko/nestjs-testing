{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src"
	},
	"include": ["src/**/*", "test/note.e2e-spec.ts", "test/mock.factory.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
